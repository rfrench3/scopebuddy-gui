<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.rfrench3.scopebuddy-gui</id>

  <name translate="no">Scopebuddy GUI</name>
  <summary>Allows you to configure Gamescope through a GUI for Scopebuddy</summary>

  <metadata_license>MIT</metadata_license>
  <project_license>GPL-3.0-only</project_license>

  <developer id="io.github.rfrench3">
    <name translate="no">Robert French</name>
  </developer>

  <description>
    <p>
      This GUI requires both Gamescope and Scopebuddy to be installed! If they are not, it will do nothing.
    </p>
    <p>
      GUI for scopebuddy, a tool which makes editing launch options such as Gamescope far less of a hassle. This GUI guides users to properly use gamescope/scopebuddy by writing to ~/.config/scopebuddy/scb.conf for the user. It was made with Python and Qt Designer.
    </p>
  </description>

  <branding>
    <color type="primary" scheme_preference="light">#c875ff</color>
    <color type="primary" scheme_preference="dark">#380066</color>
  </branding>

  <content_rating type="oars-1.1" />

  <url type="bugtracker">https://github.com/rfrench3/scopebuddy-gui/issues</url>
  <url type="homepage">https://rfrench3.github.io/scopebuddy-gui/</url>
  <url type="vcs-browser">https://github.com/rfrench3/scopebuddy-gui</url>

  <requires>
    <control>keyboard</control>
    <control>pointing</control>
    <display_length compare="ge">768</display_length>
  </requires>

  <launchable type="desktop-id">io.github.rfrench3.scopebuddy-gui.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://github.com/rfrench3/scopebuddy-gui/blob/main/images/mainWindow.png?raw=true</image>
    </screenshot>
    <screenshot>
      <image>https://github.com/rfrench3/scopebuddy-gui/blob/main/images/applyWindow.png?raw=true</image>
    </screenshot>
  </screenshots>
</component>
